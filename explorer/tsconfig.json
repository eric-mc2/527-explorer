{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    // For handling complex generic types and factories.
    "declaration": true, 
    "declarationMap": true,
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
